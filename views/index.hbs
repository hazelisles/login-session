<div class="container">
  <div class="col-8 col-md-6 col-lg-5 mx-auto my-5">
    <div class="card bg-light">
      <div class="card-body">
        <form action="/login" method="post" class="row row-cols-1" data-toggle="validator">
          <div class="col-10 mx-auto my-3" style="text-align: center;">
            <h3 class="card-title">Account Login</h3>
          </div>

          <div class="col-10 mx-auto">
            <label class="form-label" for="email"><i class="fas fa-envelope"></i> User name</label>
          </div>
          <div class="col-10 mb-4 mx-auto">
            <input class="form-control" type="email" name="email" id="email" placeholder="Email" {{#if
              result.email}}value="{{result.email}}" {{/if}} required>
          </div>
          <div class="col-10 mx-auto">
            <label class="form-label" for="password"><i class="fas fa-unlock-alt"></i> Password</label>
          </div>
          <div class="col-10 mb-4 mx-auto">
            <input class="form-control" type="password" name="password" id="password" placeholder="Password" required>
          </div>
          <div class="col-12 mx-auto">
            <div class="form-check col-5 mx-auto">
              <input class="form-check-input" type="checkbox" name="hold" value="on" id="rememberCheck">
              <label class="form-check-label" for="rememberCheck">
                Remember Me
              </label>
            </div>
          </div>

          {{#unless result.status}}
          <div class="col-10 invalid-message mx-auto" style="color: red;">
            帳號不存在或帳號密碼錯誤！
          </div>
          {{/unless}}
          <br>
          <button class="col-4 btn btn-dark mx-auto my-3" type="submit">Sign In</button>
        </form>
      </div>
    </div>
  </div>
</div>